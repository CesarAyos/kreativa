<div class="general-cont">

  <div  class="cont-bg-white">
    <div id="tematicas" class="container p-4">
      <div class="row">
        <div class="col-md-12">
          <h1 class="text-center">Tematicas</h1>
        </div>
        {{#each productos}}
          {{#if (eq this.categoria "Tematicas")}}
            <div  class="col-md-4">
              <div
                class="tarjeta card tex-center text-white rounded"
                style="background-color:  #8b0000;"
              >
                <div class="card-body">
                  <div>
                    <img
                      src="/links/imagen/{{this.id}}"
                      alt="Imagen de {{this.Titulo}}"
                      class="imagenes-productos mx-auto d-block rounded"
                    />
                    <h3
                      class="card-title text-uppercase text-uppercase text-center"
                    >
                      {{this.Titulo}}
                    </h3>
                  </div>
                  <p
                    class="m-2 text-uppercase text-center"
                  >{{this.Description}}</p>
                  <p
                    class="m-2 text-uppercase text-center"
                  >{{this.categoria}}</p>
                  <p
                    class="m-2 text-uppercase text-center"
                  >precio:{{this.precios}}</p>
                </div>
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>

